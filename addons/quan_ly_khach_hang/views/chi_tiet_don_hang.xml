<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view cho order.detail -->
    <record id="view_order_detail_tree" model="ir.ui.view">
        <field name="name">order.detail.tree</field>
        <field name="model">order.detail</field>
        <field name="arch" type="xml">
            <tree string="Chi tiết đơn hàng">
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
            </tree>
        </field>
    </record>

    <!-- Form view cho order.detail -->
    <record id="view_order_detail_form" model="ir.ui.view">
        <field name="name">order.detail.form</field>
        <field name="model">order.detail</field>
        <field name="arch" type="xml">
            <form string="Chi tiết đơn hàng">
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="price_unit"/>
                        <field name="subtotal" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action mở tree view order.detail -->
    <record id="action_order_detail" model="ir.actions.act_window">
        <field name="name">Chi tiết đơn hàng</field>
        <field name="res_model">order.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item cho order.detail -->
    <menuitem id="menu_order_detail_root"
              name="Chi tiết đơn hàng"
              parent="base.menu_sales"
              sequence="10"
              action="action_order_detail"/>
</odoo>
