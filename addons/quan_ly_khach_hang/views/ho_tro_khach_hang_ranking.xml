<odoo>
    <record id="view_ho_tro_nhan_vien_ranking_tree" model="ir.ui.view">
        <field name="name">ho_tro_nhan_vien_ranking.tree</field>
        <field name="model">ho_tro_nhan_vien_ranking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nhan_vien_id"/>
                <field name="ten_nhan_vien"/>
                <field name="so_luong_ho_tro"/>
            </tree>
        </field>
    </record>

    <record id="view_ho_tro_nhan_vien_ranking_form" model="ir.ui.view">
        <field name="name">ho_tro_nhan_vien_ranking.form</field>
        <field name="model">ho_tro_nhan_vien_ranking</field>
        <field name="arch" type="xml">
            <form string="Chi tiết xếp hạng nhân viên">
                <sheet>
                    <group>
                        <field name="nhan_vien_id"/>
                        <field name="ten_nhan_vien"/>
                        <field name="so_luong_ho_tro"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ho_tro_nhan_vien_ranking" model="ir.actions.act_window">
        <field name="name">Xếp hạng nhân viên</field>
        <field name="res_model">ho_tro_nhan_vien_ranking</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

    <menuitem id="menu_ho_tro_nhan_vien_ranking"
              name="Xếp hạng nhân viên"
              parent="base.menu_management"
              action="action_ho_tro_nhan_vien_ranking"/>
</odoo>
