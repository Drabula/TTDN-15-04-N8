<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_don_hang_khach_hang_form" model="ir.ui.view">
            <field name="name">don_hang_khach_hang</field>
            <field name="model">don_hang_khach_hang</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Đơn Hàng Khách Hàng</div>
                        <group col="4" string="Thông tin chung">
                            <field name="ma_don_hang"/>
                            <field name="ngay_dat_hang"/>
                            <field name="tong_tien"/>
                            <field name="trang_thai"/>
                            <field name="khach_hang_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_don_hang_khach_hang_tree" model="ir.ui.view">
            <field name="name">don_hang_khach_hang</field>
            <field name="model">don_hang_khach_hang</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_don_hang"/>
                    <field name="ngay_dat_hang"/>
                    <field name="tong_tien"/>
                    <field name="trang_thai"/>
                    <field name="khach_hang_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="don_hang_khach_hang_search">
            <field name="model">don_hang_khach_hang</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_don_hang"/>
                    <field name="ngay_dat_hang"/>
                    <field name="trang_thai"/>
                </search>
            </field>
        </record>

        <record id="action_don_hang_khach_hang" model="ir.actions.act_window">
            <field name="name">Đơn Hàng Khách Hàng</field>
            <field name="res_model">don_hang_khach_hang</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="don_hang_khach_hang_search"/>
        </record>
    </data>
</odoo>
